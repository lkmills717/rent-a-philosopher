<div class ="container">
<h3>Make a booking with <%= @philosopher.name%></h3>
<%= simple_form_for [@philosopher, @booking] do |f| %>
  <%= f.input :start_date, label: "From", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" } %>
  <%= f.input :end_date, label: "To", placeholder: "To", wrapper_html: { class: "inline_field_wrapper" } %>
  <%= f.submit "Book!", class: "btn btn-primary btn-block btn-booking"%>
<% end %>
</div>