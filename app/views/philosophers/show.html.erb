<div class="container mt-3">

  <div class="row justify-content-center">
    <div class="card text-center">
      <div class="card-header bg-secondary">
        <h1 style="color: white;">
          <%= @philosopher.name %>
        </h1>
      </div>
      <div class="card-body">

        <%#=  cl_image_tag @philosopher.photo.key, width: 348, height: 124, class: "card-img-top mb-3" %>

        <h5 class="card-title"><%= @philosopher.quote %></h5>

        <% @philosopher.bookings.each do |booking| %>
        <p class="card-text">Agent: <%= booking.user_id.name %></p>
        <%#= link_to "Delete Dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
        
      </div>
      
      </div>
    </div>    
  </div>
  
</div>

